
@{
    ViewBag.Title = "ActividadReserva";
}

<h2>Realizar Nueva Reserva</h2>


<body>
    <div class="container">
        <br />
        <br />

        <h6>
            Informacion general de la Actividad
        </h6>

        <form class="form-group row">
            <div class="form-group">
                <label for="nombreLocal" class="col-sm col-form-label">Nombre del local</label>
                <div class="col-sm">
                    <input type="text" class="form-control" placeholder="Nombre">
                </div>
            </div>
        </form>


        <form class="form-group row">
            <div class="form-group col">
                <label for="facultad" class="col-sm-2 col-form-label">Facultad</label>
                <div class="col-sm-10">
                    <select class="form-control" id="facultadSelect">
                        <option selected>Choose...</option>
                        <option>1</option>
                        <option>2</option>
                    </select>
                </div>
            </div>
            <div class="form-group col">
                <label for="edificio" class="col-sm-2 col-form-label">Edificio</label>
                <div class="col-sm-10">
                    <select class="form-control" id="edificioSelect">
                        <option selected>Choose...</option>
                        <option>1</option>
                        <option>2</option>
                    </select>
                </div>
            </div>
        </form>


        <form class="form-group row">
            <div class="form-group col">
                <label for="escuela" class="col-sm-2 col-form-label">Escuela</label>
                <div class="col-sm-10">
                    <select class="form-control" id="escuelaSelect">
                        <option selected>Choose...</option>
                        <option>1</option>
                        <option>2</option>
                    </select>
                </div>
            </div>
            <div class="form-group col">
                <label for="plantaLocal" class="col-sm-2 col-form-label">Planta</label>
                <div class="col-sm-10">
                    <select class="form-control" id="plantaSelect">
                        <option selected>Choose...</option>
                        <option>1</option>
                        <option>2</option>
                    </select>
                </div>
            </div>
        </form>

        <br />
        <button type="button" class="btn btn-primary">Guardar Local</button>
        <br /><br />

        <hr />
    </div>
</body>
