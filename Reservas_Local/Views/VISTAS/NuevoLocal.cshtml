
@{
    ViewBag.Title = "NuevoLocal";
}
<br />
<h2>Registrar Nuevo Local</h2>

<body>
    <div class="container">
        <br />
        <br />

        <h6>
            Informacion general
        </h6>

        <form class="form-group row">
            <div class="form-group">
                <label for="nombreLocal" class="col-sm col-form-label">Nombre del local</label>
                <div class="col-sm">
                    <input type="text" class="form-control" placeholder="Nombre">
                </div>
            </div>
        </form>


        <form class="form-group row">
            <div class="form-group col">
                <label for="facultad" class="col-sm-2 col-form-label">Facultad</label>
                <div class="col-sm-10">
                    <select class="form-control" id="facultadSelect">
                        <option selected>Choose...</option>
                        <option>1</option>
                        <option>2</option>
                    </select>
                </div>
            </div>
            <div class="form-group col">
                <label for="edificio" class="col-sm-2 col-form-label">Edificio</label>
                <div class="col-sm-10">
                    <select class="form-control" id="edificioSelect">
                        <option selected>Choose...</option>
                        <option>1</option>
                        <option>2</option>
                    </select>
                </div>
            </div>
        </form>


        <form class="form-group row">
            <div class="form-group col">
                <label for="escuela" class="col-sm-2 col-form-label">Escuela</label>
                <div class="col-sm-10">
                    <select class="form-control" id="escuelaSelect">
                        <option selected>Choose...</option>
                        <option>1</option>
                        <option>2</option>
                    </select>
                </div>
            </div>
            <div class="form-group col">
                <label for="plantaLocal" class="col-sm-2 col-form-label">Planta</label>
                <div class="col-sm-10">
                    <select class="form-control" id="plantaSelect">
                        <option selected>Choose...</option>
                        <option>1</option>
                        <option>2</option>
                    </select>
                </div>
            </div>
        </form>

        <br />
        <button type="button" class="btn btn-primary">Guardar Local</button>
        <br /><br />
        
        <hr />


        <h6>
            Subida de imagenes
        </h6>

        <form class="form-group row">
            <div class="form-group">
                <label for="selecLocal" class="col-sm col-form-label">Local</label>
                <div class="col-sm-10">
                    <select class="form-control" id="nomLocalSelect">
                        <option selected>Choose...</option>
                        <option>1</option>
                        <option>2</option>
                    </select>
                </div>
            </div>
            <div class="form-group col">
                <label for="plantaLocal" class="col-sm-6 col-form-label">Subir imagenes del local</label>
                <div class="col-sm-6">
                    <input type="file" class="form-control-file" id="exampleFormControlFile1">
                </div>
            </div>
        </form>

        <br />
        <button type="button" class="btn btn-primary">Guardar</button>
        <br />

    </div>
</body>
